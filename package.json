  "keywords": ["ui", "ux", "component", "angular"],
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build:ui": "ng build ngx-spark-ui",
    "build:icons": "ng build ngx-spark-icons",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:once": "ng test --no-watch --browsers=ChromeHeadless",
    "coverage": "ng test --no-watch --code-coverage",
    "lint": "ng lint --fix",
    "format": "prettier --write ./",
    "compodoc:build": "compodoc -p tsconfig.doc.json -n 'SPARK UI docs'",
    "compodoc:build-and-serve": "compodoc -p tsconfig.doc.json -s -n 'SPARK UI docs'",
    "compodoc:serve": "compodoc -s -n 'SPARK UI docs'",
    "storybook": "ng run ngx-spark-ui:storybook",
    "build-storybook": "ng run ngx-spark-ui:build-storybook",
    "prepare": "husky"
  },
  "dependencies": {
    "@angular/animations": "^18.2.0",
